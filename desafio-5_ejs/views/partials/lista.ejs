<style>
    .table td, .table th {
        vertical-align: middle;
    }
    .table{
        background-color: rgba(255, 68, 0, 0.521);
    }
    h2 {
        color: orangered;
    }
    hr {
        background-color: #ddd;
    }
    .jumbotron {
        min-height: 90vh;
        background-color: yellow;
        border-radius: 15px;
        box-shadow: rgba(0,0,0,0.3)0px 19px 38px,
        rgba(0,0,0,0.22)0px 15px 12px;
    }
</style>

<div class="jumbotron">
    <h2>Vista de Productos</h2>
    <br>

    <% if (hayProductos) { %>
        <div class="table-responsive">
            <table class="table">
                <tr> <th>Nombre</th> <th>Precio</th> <th>Foto</th></tr>
                <% hayProductos.forEach((prod) => {%>
                    <tr>
                        <td>
                            <%=prod.title%>
                        </td>
                        <td>
                            $ <%=prod.price%>
                        </td>
                        <td>
                            <img width="100" src=<%=prod.thumbnail%> alt="not found">                           
                        </td>
                    </tr>
                <%});%>
            </table>
        </div>
    <% } else { %>
        <h3 class="alert alert-danger">No hay productos</h3>
    <% } %>

    <a href="/" class="btn btn-info m-3">Volver</a>
</div>